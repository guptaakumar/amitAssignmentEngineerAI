<% if current_user %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% end %>
<h2>Secret Codes</h2>
<%# if can? :new, @secret_code %>
  <%= button_to "Generate More Secret Code", new_secret_code_path, method: :get %>
<%# end %>
<% if @secret_codes.present? %>
  <table>
    <tr>
      <td>
        <th>Code</th>
      </td>
      <td>
        <th>User Email</th>
      </td>
    </tr>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td>
          <%= secret_code.code %>
        </td>
        <td>
          <%= secret_code&.user&.email %>
        </td>
    <% end %>
  </table>
<% end %>
