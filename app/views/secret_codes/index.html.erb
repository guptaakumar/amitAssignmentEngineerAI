<h2>Secret Codes</h2>
<%= button_to "Generate More Secret Code", new_secret_code_path, method: :get %>
<% if @secret_codes.present? %>
  <table>
    <tr>
      <td>
        <th>Code</th>
      </td>
      <td>
        <th>User Email</th>
      </td>
    </tr>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td>
          <%= secret_code.code %>
        </td>
        <td>
          <%= secret_code&.user&.email %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
